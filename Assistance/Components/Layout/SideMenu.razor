<Bar Breakpoint="Breakpoint.Desktop" NavigationBreakpoint="Breakpoint.Tablet" ThemeContrast="ThemeContrast.Dark"
     Mode="BarMode.VerticalPopout" CollapseMode="BarCollapseMode.Small" >
    <BarToggler Mode="BarTogglerMode.Normal" />
    <BarBrand>
        <BarItem>
            <BarLink>
                <BarIcon IconName="customIcon" />
                MENÚ
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarMenu>
        <BarStart>
            <BarItem>
                <BarLink To="/">
                    <BarIcon IconName="IconName.Dashboard" />
                    Dashboard
                </BarLink>
            </BarItem>
            
            <BarItem>
                <BarLink To="/Assistances">
                    <BarIcon Class="fa-solid fa-list-check" />
                    Asistencias
                </BarLink>
            </BarItem>
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.LayerGroup" />
                        Catálogos
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="/Catalogs/Employees">Empleados</BarDropdownItem>
                        <BarDropdownItem To="/Catalogs/Departments">Departamentos</BarDropdownItem>
                        <BarDropdownItem To="/Catalogs/Jobs">Puestos</BarDropdownItem>
                        <BarDropdownItem To="/Catalogs/Shifts">Turnos</BarDropdownItem>
                        <BarDropdownItem To="/Catalogs/Locations">Zonas</BarDropdownItem>
                    </BarDropdownMenu>                    
                </BarDropdown>
            </BarItem>
        </BarStart>        
    </BarMenu>
</Bar>
@code {    
    RenderFragment customIcon =@<img src="/brand-logo.png" style="width:32px; height: 32px" />;
}